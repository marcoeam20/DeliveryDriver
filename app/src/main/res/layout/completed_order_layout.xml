<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/cardview"
        android:layout_width="340dp"
        android:layout_height="120dp"
        android:layout_marginTop="11dp"
        app:cardBackgroundColor="?android:attr/colorPrimaryDark"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true">


        <TextView
            android:id="@+id/tvOrderID"
            android:layout_width="269dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="20dp"
            android:layout_toEndOf="@+id/imageView5"
            android:text="TextView"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/tvCustomerUsername"
            android:layout_width="264dp"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/tvOrderID"
            android:layout_below="@+id/imageView5"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="60dp"
            android:text="TextView"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/tvCustomerAddress"
            android:layout_width="272dp"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/tvCustomerUsername"
            android:layout_alignTop="@+id/imageView9"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="90dp"
            android:text="TextView"
            android:textColor="@android:color/black" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/tvOrderID"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="18dp"
            app:srcCompat="@drawable/list" />

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignEnd="@+id/imageView5"
            android:layout_alignTop="@+id/tvCustomerUsername"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="58dp"
            app:srcCompat="@drawable/user" />

        <ImageView
            android:id="@+id/imageView9"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignStart="@+id/imageView8"
            android:layout_below="@+id/imageView8"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="87dp"
            app:srcCompat="@drawable/locmap" />

    </android.support.v7.widget.CardView>

</RelativeLayout>